    {{!-- add admin --}}    
    <div class="modal fade" id="addAdminModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Add Nominee</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    {{> error}}
                    <form action="/registerAdmin" method="POST" class="p-2 mt-3">
                        <div class="form-group">
                            <input type='email' name="Email" class="form-control" placeholder="Enter email" onclick="handleInput()"
                                required='true' />
                        </div>
                        <div class="form-group">
                            <input type="password" name="password" class="form-control" placeholder="Enter password" onclick="handleInput()"
                                required='true' />
                        </div>
                        <div class="form-group">
                            <input type="password" name="superPassword" class="form-control" placeholder="Enter Super Admin password" onclick="handleInput()"
                                required='true' />
                        </div>
                        <button class="btn btn=block" type="submit" id="btn">Submit</button>
                    
                    </form>
                </div>
           
            </div>
        </div>
    </div>

{{!-- add moninee modal --}}
      <div class="modal fade" id="addModal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Add Nominee</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="close">
                            <span aria-hidden="true">&times;</span>
                       </button>
                    </div>
                    <div class="modal-body">
                        <form action="/add" method="POST" enctype="multipart/form-data">
                            <div class="form-group">
                                <input class="form-control" name="Name" type="text" placeholder="Enter Nominee Name" required="true" />
                            </div>
                            <div class="form-group">
                                <select multiple class="form-select" name="Post"  required="true">
                                    {{#each posts}}
                                    <option>{{this}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="form-group">
                                <input type='file' name="avatar" id="uploadBannerImage" required="true"/>
                            </div>                           
                            
                            <button type="submit" class="btn btn-primary btn-block">Add Nominee</button>
                        </form>
                    </div>        
        </div>
    </div>
    </div>

{{!-- update nominee modal --}}
    <div class="modal fade" id="updateModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Update Nominee</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="/update" method="POST">
                        <div class="form-group">
                            <input class="form-control" name="currentName" type="text" placeholder="Enter Current Nominee Name" required="true" />
                        </div>
                        <div class="form-group">
                            <input class="form-control" name="newName"  type="text" placeholder="Enter Updated Nominee Name" required="true" />
                        </div>
                        <div class="form-group">
                            <label for="currentPost">Current Post:</label>
                            <select multiple class="form-control" id="currentPost" name="currentPost" required="true">
                                {{#each posts}}
                                <option>{{this}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="currentPost">New Post:</label>
                            <select multiple class="form-control" name="newPost" required="true">
                                {{#each posts}}
                                <option>{{this}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Update Nominee</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    {{!-- Delete Nominee --}}
    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Delete Nominee</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="/delete" method="POST"> 
                        <div class="form-group">
                            <input class="form-control" name="Name" type="text" placeholder="Enter Nominee Name"
                                required="true" />
                        </div>
                        <div class="form-group">
                            <input class="form-control" name="Post" type="text" placeholder="Enter Nominee Post"
                                required="true" />
                        </div>
    
                        <button type="submit" class="btn btn-primary btn-block">Delete Nominee</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    {{!-- delete all entries --}}
    <div class="modal fade" id="deleteAllModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Delete Nominees</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>This will delete all Nomiees</p>
                    <form action="/deleteAll" method="POST">
                        <div class="form-group">
                            <input class="form-control" name="Password" type="password" placeholder="Enter Admin password" required="true" />
                        </div>
    
                        <button type="submit" class="btn btn-primary btn-block">Delete All</button>
                    </form>
                </div>
            </div>
        </div>
        </div>
        <div class="container" style="padding-top: 120px;" >
            {{#each Nominees}}
            <div class="card d-inline-block m-3" style="width: 20rem; height:50vh">
                <img class="card-img top" src="{{this.image}}" style="width:20rem; height:40vh" alt="Nominee Image">
                <div class="card-body p-2">
                    <p class="card-text p-0 m-0"><b>Name:</b> {{this.name}}</p>
                    <p class="card-text p-0 m-0"><b>Post:</b> {{this.post}}</p>
                </div>
            </div>
            {{/each}}
            </div>
    </div>


        
